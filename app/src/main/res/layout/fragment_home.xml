<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/converter_button"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:foreground="@drawable/converter_tool"
                    android:insetLeft="6dp"
                    android:insetTop="6dp"
                    android:insetRight="6dp"
                    android:insetBottom="6dp"
                    android:textColor="#5E35B1" />

                <TextView
                    android:id="@+id/converter_text"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"

                    android:background="@color/green_200"
                    android:gravity="center"
                    android:text="Converter"
                    android:textColor="#673AB7"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/camera_button"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:foreground="@drawable/qr_scanner_tool"
                    android:insetLeft="6dp"
                    android:insetTop="6dp"
                    android:insetRight="6dp"
                    android:insetBottom="6dp"

                    android:textColor="#5E35B1" />

                <TextView
                    android:id="@+id/camera_text"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"

                    android:background="@color/green_200"
                    android:gravity="center"
                    android:text="Camera"
                    android:textColor="#673AB7"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/morse_button"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:foreground="@drawable/morse_tool"
                    android:gravity="bottom|center"
                    android:insetLeft="6dp"
                    android:insetTop="6dp"
                    android:insetRight="6dp"
                    android:insetBottom="6dp"
                    android:textColor="#5E35B1" />

                <TextView
                    android:id="@+id/morse_text"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"
                    android:background="@color/green_200"
                    android:gravity="center"
                    android:text="Morse"
                    android:textColor="#673AB7"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/cipher_button"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:foreground="@drawable/cipher_tool"
                    android:gravity="bottom|center"

                    android:insetLeft="6dp"
                    android:insetTop="6dp"
                    android:insetRight="6dp"
                    android:insetBottom="6dp"
                    android:textColor="#5E35B1" />

                <TextView
                    android:id="@+id/cipher_text"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"

                    android:background="@color/green_200"
                    android:gravity="center"
                    android:text="Cipher"
                    android:textColor="#673AB7"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/notes_button"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"

                    android:foreground="@drawable/notes_tool"
                    android:insetLeft="6dp"
                    android:insetTop="6dp"
                    android:insetRight="6dp"
                    android:insetBottom="6dp"
                    android:textColor="#5E35B1" />

                <TextView
                    android:id="@+id/notes_text"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"

                    android:background="@color/green_200"
                    android:gravity="center"
                    android:text="Notes"
                    android:textColor="#673AB7"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:orientation="vertical">

            </LinearLayout>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="318dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/purple_700"
        android:text="Submit Answer"
        android:textColor="#FEFFFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>